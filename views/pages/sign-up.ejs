<!-- HEAD PARTIAL -->
<%- include('../partials/head') %> 
    <!-- NAV PARTIAL -->
    <%- include('../partials/nav') %> 
        <!-- MAIN BODY -->
        <main>
            <h2 class="gradient-text modal-heading">create an account</h2>
            <p class="modal-p">already have a <span class="gradient-text">hrmnl</span> account? <span class="light-grey">//</span> <a href="/login"><span class="embolden">log in</span></a></p>
            <!-- SIGN UP FORM -->
            <form class="form-border short-form" action="/user" method="POST" name="sign-up-form" id="sign-up-form">
                <ul class="flex-form">
                    <li>
                        <label for="name">what should we call you?</label>
                        <input type="text" id="name" name="name" placeholder="your name" required>
                    </li>
                    <li>
                        <label for="pronouns">what are your pronouns?</label>
                        <input type="text" id="pronouns" name="pronouns" placeholder="they/them/theirs">
                    </li>
                    <li>
                        <label for="email">email</label>
                        <input type="email" id="email" name="email" placeholder="yourname@email.com" required>
                    </li>
                    <li>
                        <label for="password">password</label>
                        <input type="password" id="password" name="password" placeholder="unique password" required>
                    </li>
                    <li>
                        <input type="submit" value="register with hrmnl" class="submit first-button" />
                    </li>
                </ul>
                <div class="auth">
                    <a href="/auth/google" role="button" class="btn">
                        <button class="simple-btn">
                            log in with google
                            </button>
                        </a>  
                </div>
                <!-- <p>already have a <span class="gradient-text">hrmnl</span> account? <span class="light-grey">//</span> <a href="/login"><span class="embolden">log in</span></a></p> -->
            </form>
        </main>
    <!-- FOOTER PARTIAL -->
    <%- include('../partials/footer') %>