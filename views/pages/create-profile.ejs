<!-- HEAD PARTIAL -->
<%- include('../partials/head') %> 
    <!-- NAV PARTIAL -->
    <%- include('../partials/nav') %> 
        <!-- MAIN BODY -->
        <!-- i prioritzed providing an accessible user experience while i'm learning, within the scope and limits of what i've learned so far -->
        <main>
            <h2>// set up</h2>
            <form class="setUp" action="#" method="post" name="set-up-form" id="set-up-form">
                <input type="hidden" name="redirect" value="./profile" /><!-- should redirect to profile page-->
                <ul>
                    <li>
                        <label for="name">name</label>
                        <input type="text" id="name" name="user_name" value="name entered in sign-up form" required><!--value= value of user_name-->
                    </li>
                    <li>
                        <!-- <label for="pronouns">pronouns</label>
                        <input type="text" id="pronouns" name="user_pronouns" value="pronouns"> -->
                        <fieldset name="pronouns" id="pronouns">
                        <legend>pronouns</legend>
                            <input type="checkbox" id="pronouns-they" name="pronouns-they" value="they">
                            <label for="pronouns-they">they/them/theirs</label><br>
                            <input type="checkbox" id="pronouns-she" name="pronouns-she" value="she">
                            <label for="pronouns-she">she/her/hers</label><br>
                            <input type="checkbox" id="pronouns-he" name="pronouns-he" value="he">
                            <label for="pronouns-he">he/him/his</label><br>
                            <input type="checkbox" id="pronouns-expand" name="pronouns-expand" value="expand">
                            <label for="pronouns-expand">+ expand</label><!--opens more pronoun options-->
                        </fieldset>
                        <!-- maybe these should be mini buttons that stay clicked, update a pronouns array???-->

                    </li>
                    <li>
                        <label for="mail">email</label>
                        <input type="email" id="email" name="user_email" value="email" required>
                    </li>
                    <li>
                        <label for="password">password</label>
                        <input type="password" id="password" name="user_password" required>
                    </li>
                    <li>
                        <label for="hormone">hormone type</label>
                        <input type="text" id="hormone" name="user_hormone" required>
                    </li>
                    <li class="button">
                        <button type="submit">submit</button>
                    </li>
                </ul>
            </form>

        </main>
    <!-- FOOTER PARTIAL -->
    <%- include('../partials/footer') %>